{
	"name" : "PointDownload",
	"version" : "1.0.5",
	"description" : "Get file download link for Point",
	"background" : { "scripts": ["background.js"] },
	"browser_action": {
	      "default_icon": {                   
	      "19": "point-19.png",          
	      "38": "point-38.png"          
		},
	      "default_title": "PointDownload" 
    },
	"icons": { "64": "point-64.png" },
	"permissions" : [
	"nativeMessaging",
	"contextMenus",
	"downloads",
	"storage" ,
	"webRequest",
 	"webRequestBlocking",
	"tabs",
	"http://*/*",
	"https://*/*"
    ],
	"minimum_chrome_version" : "6.0.0.0",
	"manifest_version": 2
}

